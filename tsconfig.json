{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "App.tsx",
    "src/screens/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/pages",
    "src/components",
    "src/main.tsx",
    "src/App.tsx",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.js"
  ]
}
